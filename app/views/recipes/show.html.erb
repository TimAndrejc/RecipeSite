<div class="container" style="margin-top: -100px: height:100%">
<div id="<%= dom_id @recipe %>">
  <h1 style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);">
    <%= @recipe.title %>
  </h1>
  <br>
  <p>
    <strong style="font-size:20px; color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);">Ingredients</strong>
    <br>
    <%= @recipe.ingredients.split(",").map(&:strip).join("<br>").html_safe %> 
  <p>
    <strong style="font-size:20px; color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);">Instructions</strong>
    <br>
    <%= @recipe.instructions.split(/(?<=\.)\s+(?=\d)/).join(". " + "<br>".html_safe).html_safe %>

  </p>

  <% if @recipe.difficulty.present?%>
  <p>
    <strong style="font-size:20px; color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);">Difficulty:</strong>
    <% if @recipe.difficulty == 1 %>
      <i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);" ></i>
    <% elsif @recipe.difficulty == 2 %>
      <i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i>
    <% elsif @recipe.difficulty == 3 %>
      <i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i><i class="bi eggies bi-egg-fill fa-lg" style="color: rgb(163,188,4);
	color: radial-gradient(circle, rgba(163,188,4,1) 0%, rgba(186,212,55,1) 100%);"></i>
    <% end %>
  </p>
  <% end %>
</div>

<div>
<% if current_user == @recipe.user %>
  <% if @recipe.confirmed != true %>
    <div style="display:flex; justify-content:flex-start;">
      <%= link_to "Post your recipe", edit_recipe_path(@recipe), class: "btn btn-3 btn-lg", style:"color:white; margin-right: 8px;" %> 
      <%= button_to "Destroy this recipe", @recipe, method: :delete, class: "btn btn-3 btn-lg ml-3", style:"color:white;" %>
    </div>
  <% else %>
    <%= button_to "Destroy this recipe", @recipe, method: :delete, class: "btn btn-3 btn-lg", style:"color:white;" %>
  <% end %>
<% end %>


</div>
