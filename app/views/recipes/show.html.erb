<div id="<%= dom_id @recipe %>">
  <p>
    <strong>Title:</strong>
    <%= @recipe.title %>
  </p>
  <p>
    <strong>Ingredients:</strong>
    <%= @recipe.ingredients %>
  <p>
    <strong>Instructions:</strong>
    <%= @recipe.instructions %>
  </p>

  <% if @recipe.difficulty.present?%>
  <p>
    <strong>Difficulty:</strong>
    <% if @recipe.difficulty == 1 %>
      <i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i>
    <% elsif @recipe.difficulty == 2 %>
      <i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i>
    <% elsif @recipe.difficulty == 3 %>
      <i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg-fill fa-lg"></i>
    <% end %>
  </p>
  <% end %>
</div>

<div>
  <% if current_user = @recipe.user %>
    <% if @recipe.confirmed != true %>
      <%= link_to "Post your recipe", edit_recipe_path(@recipe) %> 
    <% end %>
   <%= button_to "Destroy this recipe", @recipe, method: :delete %>
  <% end %>

</div>
