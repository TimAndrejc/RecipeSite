<div class="container">
  <div class="text-center">
    <h1 style="font-size: 60px">All Recipes</h1>
    <br>
    <form class="d-flex" method="GET" action="<%= search_recipes_path %>">
      <input class="form-control me-2" type="search" placeholder="Search recipes" aria-label="Search" name="q">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <br>
    <% if @search_results.present? %>
      <h2>Search Results</h2>
      <div class="row">
        <% @search_results.each do |recipe| %>
          <%= render recipe %>
        <% end %>
      </div>
    <% end %>
    <h2>All Recipes</h2>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <%= render recipe %>
      <% end %>
    </div>
  </div>
</div>




