    <p style="color:white; font-family: Marker Felt, fantasy; font-size: 24px;"> Here are todays trending recipes, all generated by our users! </p>
    <br>  
    <div class="row">
  <% if @trending_recipes %>
  <% @trending_recipes.each do |trending_recipe| %>
    <div class="col-lg-4 col-md-12 mb-4">
      <div class="cardfood">
      <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
            data-mdb-ripple-color="light">
            <img src="https://img.delicious.com.au/bjQdV7xU/w1200/del/2022/02/vibrant-chickpea-burgers-163338-2.jpg"
              class="w-100" style="border-radius: 10px" />
            <div class="mask">
              <div class="d-flex justify-content-start align-items-end h-100">
                <h5><span class="badge bg-success ms-2">HOT</span></h5>
              </div>
            </div>
            <div class="hover-overlay">
              <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </div>
          </a>
        </div>
        <div class="card-body">
          <a href="<%= recipe_path(trending_recipe) %>" class="text-reset">
            <h5 class="card-title mb-3"><%= trending_recipe.title %></h5>
          </a>
              <a class="text-reset">
              <p>Difficulty</p>
            </a>
            <h6 class="mb-3">
            
              <% if trending_recipe.difficulty == 1 %>
              <i class="bi eggies bi-egg-fill fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i><i class="bi eggies bi-egg fa-lg"></i>
